{
  "name": "Scopex",
  "version": "1.0.0",
  "description": "This is for mobile automation Scopex",
  "main": "index.js",
  "scripts": {
    "test": "wdio wdio.conf.js",
    "test:android": "PLATFORM=android wdio wdio.conf.js",
    "test:ios": "PLATFORM=ios wdio wdio.conf.js",
    "test:android:clear": "PLATFORM=android RESET_MODE=cache wdio wdio.conf.js",
    "test:ios:clear": "PLATFORM=ios RESET_MODE=cache wdio wdio.conf.js",
    "test:smoke": "wdio wdio.conf.js --suite smoke",
    "test:android:smoke": "PLATFORM=android wdio wdio.conf.js --suite smoke",
    "test:ios:smoke": "PLATFORM=ios wdio wdio.conf.js --suite smoke",
    "test:smoke:repeat": "wdio wdio.conf.js --suite smoke --repeat 5",
    "test:android:smoke:repeat": "PLATFORM=android wdio wdio.conf.js --suite smoke --repeat 5",
    "test:ios:smoke:repeat": "PLATFORM=ios wdio wdio.conf.js --suite smoke --repeat 5"
  },
  "keywords": [
    "Webdriver.io"
  ],
  "author": "Saurabh Verma",
  "license": "ISC",
  "dependencies": {
    "@wdio/cli": "^7.20.2"
  },
  "devDependencies": {
    "@wdio/appium-service": "^7.20.1",
    "@wdio/local-runner": "^7.20.2",
    "@wdio/mocha-framework": "^7.20.0",
    "@wdio/spec-reporter": "^7.20.0"
  }
}
